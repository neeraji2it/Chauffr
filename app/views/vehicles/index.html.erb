<%#= render_breadcrumbs %>
<br/>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
  <tr>
    <td colspan='6'><%= link_to "Add New", new_vehicle_path %></td>
  </tr>
  
  <tr class="success">
    <th>Vehicle Type</th>
    <th>Minimum Fare</th>
    <th>First Fare</th>
    <th>After First Fare</th>
    <th>Action</th>
  </tr>
  
  <% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.vehicle_type %></td>
    <td><%= vehicle.min_fare %></td>
    <td><%= vehicle.first_fare %></td>
    <td><%= vehicle.after_first_fare %></td>
    <td><%= link_to "Edit",edit_vehicle_path(vehicle),:class => "btn btn-mini btn-primary" %>
    <%= link_to "Delete", vehicle, :data => {:confirm => "Are you sure?"},:method => "DELETE",:class => "btn btn-mini btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
</div>