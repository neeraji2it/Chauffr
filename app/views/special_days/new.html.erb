<div class="col-sm-6">
<%#= render_breadcrumbs %><br/>
  
  <%= form_for(@special_day) do |f| %>
    <% if @special_day.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@special_day.errors.count, "error") %> prohibited this special_day from being saved:</h2>
        <ul>
          <% @special_day.errors.full_messages.each do |msg| %>
