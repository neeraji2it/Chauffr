      <div class="form-group">
        <%= f.text_field :surcharge,:placeholder => "surcharge",:class => "form-control"  %>
      </div>
    </div>

    <div class="row">
      <%= f.submit "Save", :class => "btn btn-success" %>
    </div><br/>

  <% end %>

</div>