<!DOCTYPE html>
<html>
  <head>
    <title>Chauffr</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container">
      <div class="panel-body">
        <% if notice.present?%>
          <div class="alert alert-block alert-info fade in">
            <button data-dismiss="alert" class="close" type="button" data-original-title="">
              x
            </button>
            <p class="notice"><%= notice %></p>
          </div>
        <% elsif alert.present? %> 
          <div class="alert alert-block alert-info fade in">
            <button data-dismiss="alert" class="close" type="button" data-original-title="">
              x
            </button>
            <p class="alert"><%= alert %></p>
          </div>
        <% end %>

        <div class="form-inline pull-right">
          <% if user_signed_in? %>
            <span style="margin-right: 20px;" class="text-success">
              Welcome <%= current_user.email %>
            </span>

            <span>
              <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
            </span>
          <% else %>
          
          <% end %>
        </div>

        <h1 class="text-warning" style="margin-bottom: 40px;">
          <b>
            <%= link_to "Chauffr", homes_path, :class => "text-warning" %>
          </b>  
        </h1>

        <%= yield %>
      </div>

    </div>
  </body>
</html>